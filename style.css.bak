/* style.css */

body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f5f5f5;
}

header {
    background-color: #333;
    color: #fff;
    padding: 20px;
    text-align: center;
}

img {
    width: 150px;
    height: 150px;
}

nav ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
}

nav ul li {
    display: inline;
    margin-right: 20px;
}

nav ul li a {
    color: #fff;
    text-decoration: none;
    transition: all 0.3s ease;
}

nav ul li a:hover {
    text-decoration: underline;
    transform: scale(1.1);
}

section {
    padding: 20px;
    margin: 20px;
    background-color: #CCD1D1; /* Légèrement plus clair */
    border-radius: 10px;
}

h2 {
    color: #333;
}

h3 {
    color: #666;
}

ul.documents {
    padding: 0;
    margin: 0;
}

ul.documents li {
    margin-bottom: 10px;
}

span {
    display: inline-block;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    margin-right: 10px;
}


span.Verydangerous {
    background-color: black;
}

span.dangerous {
    background-color: red;
}

span.Assezdangerous {
    background-color: "#DC7633";
}

span.neutral {
    background-color: yellow;
}

span.safe {
    background-color: green;
}

span.unknown {
    background-color: gray;
}

footer {
    background-color: #333;
    color: #fff;
    text-align: center;
    padding: 10px;
    position: fixed;
    bottom: 0;
    width: 100%;
}
